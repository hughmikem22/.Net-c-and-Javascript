@page
@model CartInASPNETCoreRazorPages.Pages.CartModel
@{
    ViewData["Title"] = "Cart";
}

<h2>Cart</h2>


<body>
    <h3> Product List</h3>
    <table border="1">
        <tr>
            <th>Action</th>
            <th>Id</th>
            <th>Name</th>
            <th>Photo</th>
            <th>Price</th>
            <th>Quantity</th>
            <th>Sub Total</th>

        </tr>
        @{ double total = 0; }
        @foreach (var item in Model.cart)
        {
            total += item.Product.Price * item.Quantity;
            <tr>
                <td>
                    <a asp-page="cart" asp-page-handler="delete" asp-route-id="@item.Product.Id"></a>
                </td>
                <td>@item.Product.Id</td>
                <td>@item.Product.Name</td>
                <td><img src="~/images/@item.Product.Photo" width="120" height="100" /></td>
                <td>@item.Product.Price</td>
                <td>@item.Quantity</td>


                <td>
                    @(item.Product.Price * item.Quantity)
                </td>

            </tr>
        }

        <tr>
            <td colspan="6" align="right"></td>
            <td>@total</td>
        </tr>




    </table>
    
    <a asp-page="/index2">Continue Shopping</a>

</body>

